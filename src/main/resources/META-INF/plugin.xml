<idea-plugin>
    <id>ma.leet.ft_header</id>
    <version>1.7</version>
    <name>Ft_header</name>
    <vendor email="yez-zain@student.1337.ma" url="https://cv.42.fr/yez-zain">yez-zain</vendor>
    <description><![CDATA[
    Simple plugin for adding 42 school header to C source and header files.
    ]]></description>
    <change-notes><![CDATA[
    <ul>
        <li>Add support for Makefile header.</li>
    </ul>
    ]]></change-notes>
    <idea-version since-build="222.*" until-build="231.*"/>
    <depends>com.intellij.modules.platform</depends>
    <applicationListeners>
        <listener class="ma.leet.ft_header.SaveHook"
                  topic="com.intellij.openapi.actionSystem.ex.AnActionListener"/>
    </applicationListeners>
    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="ma.leet.ft_header.AppSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="ma.leet.ft_header.AppSettingsConfigurable"
                id="ma.leet.ft_header.AppSettingsConfigurable"
                displayName="42 Header Settings"/>
        <notificationGroup
                id="Unsupported File Headers"
                displayType="BALLOON"/>
    </extensions>
</idea-plugin>
